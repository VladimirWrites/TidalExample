<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Cancel" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="icon">@drawable/ic_cancel</item>
        <item name="iconPadding">0dp</item>
        <item name="shapeAppearance">@style/Button.Circle</item>
        <item name="tint">@color/black</item>
        <item name="strokeColor">@color/transparent</item>
    </style>

    <style name="Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:elevation">0dp</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:textColorHighlight">@color/teal_700</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="backgroundColor">@color/black</item>
        <item name="titleTextColor">@color/white</item>
    </style>

</resources>